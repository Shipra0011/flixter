<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center"><%= current_course.title %></h1>
  <br />
  <%= link_to 'Preview As Student...', course_path(current_course), class: 'btn btn-warning pull-left' %>
  <br class="clr" />

  <div class="text-center">
  	<br />
     <%= link_to 'Add a new section...', new_instructor_course_section_path(current_course), class: 'btn btn-primary btn-lg pull-left' %>
    <br class="clr" />
  </div>

   
  <ul>
  <br />
    <% current_course.sections.each do |section| %>
      <li>
        <%= section.title %>
        <%= link_to 'New Lesson for this section', new_instructor_section_lesson_path(section), class: 'btn btn-primary btn-xs pull-right' %>
        <ul>
          <% section.lessons.each do |lesson| %>
            <li>
              <b><%= lesson.title %></b>
              -
              <%= lesson.subtitle %>
            </li>
          <% end %>
        </ul>
        <br class="clr" />
      </li>
    <% end %>
  </ul>

</div>
</div>